<apex:page controller="MailListWrapperController">
    <apex:form >
    	<apex:pageBlock >
            <apex:pageBlockButtons >
                <apex:commandButton action="{!refreshView}" value="Show All" rerender="table" />
            </apex:pageBlockButtons>
            <apex:inputField value="{!sample.Delivery_Status__c}" />
            <apex:commandButton action="{!filter}" value="Filter" rerender="table"/>            
        	<apex:pageBlockTable value="{!mailList}" var="packages" id="table">
                <apex:column value="{!packages.mail.Id}" headerValue="Tracking Code" rendered="{!packages.currView}"/>
                <apex:column value="{!packages.mail.Delivery_Status__c}" rendered="{!packages.currView}" />
                <apex:column value="{!packages.addr.Address_Line_1__c}" rendered="{!packages.currView}" />
                <apex:column value="{!packages.addr.Address_Line_2__c}" rendered="{!packages.currView}" />
                <apex:column value="{!packages.addr.City__c}" rendered="{!packages.currView}" />
                <apex:column value="{!packages.addr.Postal_Zip_Code__c}" rendered="{!packages.currView}" />
                <apex:column value="{!packages.addr.State__c}" rendered="{!packages.currView}" />
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>    
</apex:page>